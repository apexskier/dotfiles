# vim: ft=conf

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[Makefile,*.go]
indent_style = tab

[*.{md,markdown,MARKDOWN}]
trim_trailing_whitespace = false

[*.{yaml,yml,toml}]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
