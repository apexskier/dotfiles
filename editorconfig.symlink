# vim: ft=conf
# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[Makefile,*.go]
indent_style = tab

[*.{md,markdown,MARKDOWN}]
trim_trailing_whitespace = false

[*.yml,*.toml]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
