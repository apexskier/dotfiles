{
    "editor.fontSize": 14,
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.lineNumbers": "relative",
    "editor.fontLigatures": true,
    "editor.rulers": [80, 120],
    "editor.cursorBlinking": "solid",

    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 120,
    "vim.smartcase": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.history": 500,
    "vim.normalModeKeyBindingsNonRecursive": [
        // unhighlight search (hlsearch) with `\⏎`
        {
            "before": [
                "<leader>",
                "<cr>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        // execute q macro with Q
        {
            "before": [
                "Q"
            ],
            "after": [
                "@",
                "q"
            ]
        },
        // show usages
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        // preview definition
        {
            "before": [
                "g",
                "R"
            ],
            "commands": [
                "editor.action.previewDeclaration"
            ]
        },
        // jump to definition
        {
            "before": [
                "g",
                "d"
            ],
            "commands": [
                "editor.action.goToDeclaration"
            ]
        },
        // jump to type definition
        {
            "before": [
                "g",
                "D"
            ],
            "commands": [
                "editor.action.goToTypeDefinition"
            ]
        },
        // rename
        {
            "before": [
                "g",
                "n"
            ],
            "commands": [
                "editor.action.rename"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // nicer indentation
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],

    "javascript.validate.enable": false,
    "eslint.autoFixOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.tslint": true
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[scss]": {
        "editor.formatOnSave": true,
    },
    // "[markdown]": {
    //     "editor.formatOnSave": true,
    // },

    // enable "preview" (non-persistent opened files) from search, but not ⌘P
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "window.zoomLevel": 0,
    "typescript.check.npmIsInstalled": false,
    "typescript.tsserver.log": "normal",
    "emmet.showAbbreviationSuggestions": false,
    "emmet.showExpandedAbbreviation": "never",
    "npm.autoDetect": "off",
    "gulp.autoDetect": "off",
    "grunt.autoDetect": "off",
    "jake.autoDetect": "off",
    "terminal.explorerKind": "external",
    "scss.validate": false,
    "explorer.confirmDragAndDrop": false,
    "go.useLanguageServer": true,
    "flow.enabled": false,
    "workbench.editor.tabSizing": "shrink",
    "cSpell.showStatus": false,
    "cSpell.allowCompoundWords": true,
    "cSpell.words": [
        "anchor",
        "clabe",
        "context",
        "describedby",
        "deserialize",
        "forex",
        "gettext",
        "kount",
        "refresh",
        "reinit",
        "remitly",
        "rescroll",
        "rescroller",
        "resume",
        "scroll",
        "sendto",
        "serializable",
        "softfail",
        "softfailed",
        "transaction",
        "types",
        "unmount"
    ],
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.blame.heatmap.enabled": false,
    "gitlens.blame.avatars": false,
    "gitlens.blame.highlight.enabled": false,
    "gitlens.hovers.annotations.over": "annotation",
    "gitlens.hovers.annotations.enabled": false,
    "gitlens.recentChanges.highlight.locations": [
        "gutter",
        "overview",
        "line"
    ],
    "gitlens.statusBar.enabled": false,
    "gitlens.currentLine.format": "${author}, ${ago}",
    "cSpell.userWords": [
        "Apptentive",
        "Quovo",
        "authed",
        "csrf",
        "decamelize",
        "deduping",
        "deployer",
        "deregister",
        "deserialization",
        "deserialize",
        "deserialized",
        "deserializer",
        "directionality",
        "forex",
        "hackathon",
        "ifsc",
        "locme",
        "mailto",
        "memoized",
        "memoizes",
        "nolink",
        "pollyjs",
        "react",
        "recurse",
        "remitly",
        "rerequest",
        "sassify",
        "serializable",
        "serializers",
        "signup",
        "sjcl",
        "stateful",
        "symlinks",
        "transpilation",
        "truthy",
        "unauthed",
        "uncancelable",
        "unhydrated",
        "unmounts",
        "verdaccio"
    ],
    "gitlens.keymap": "chorded",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "flow.runOnEdit": false,
    "workbench.editor.labelFormat": "short",
    "cSpell.language": "en,en-US",
    "stylelint.enable": false,
    "workbench.colorTheme": "Solarized Dark",
    "workbench.statusBar.feedback.visible": false,
    "breadcrumbs.enabled": true,
    "typescript.preferences.quoteStyle": "double",
    "typescript.updateImportsOnFileMove.enabled": "never",
    "search.useGlobalIgnoreFiles": true,
    "workbench.editor.highlightModifiedTabs": true,
    "scss.lint.validProperties": [
        "appearance"
    ],
    "gitlens.hovers.avatars": false,
    "gitlens.hovers.currentLine.changes": false,
    "gitlens.views.repositories.enabled": false,
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "gitlens.views.compare.avatars": false,
    "gitlens.views.repositories.avatars": false,
    "gitlens.views.search.avatars": false,
    "puppet.editorService.enable": false,
    "puppet.editorService.hover.showMetadataInfo": false,
    "puppet.pdk.checkVersion": false,
    "puppet.titleBar.pdkNewModule.enable": false
}
