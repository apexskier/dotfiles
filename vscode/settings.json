        "unmount"
    ],

    "editor.codeActionsOnSave": {
        "source.fixAll.tslint": true,
        "source.fixAll.eslint": true
    },
    "editor.cursorBlinking": "solid",
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 120,
    "editor.minimap.renderCharacters": false,
    "editor.rulers": [80, 120],

    "emmet.showAbbreviationSuggestions": false,
    "emmet.showExpandedAbbreviation": "never",

    "eslint.packageManager": "yarn",

    "explorer.confirmDragAndDrop": false,

    "go.autocompleteUnimportedPackages": true,
    "go.formatTool": "gofmt",
    "go.useLanguageServer": true,

    "grunt.autoDetect": "off",

    "gulp.autoDetect": "off",

    "jake.autoDetect": "off",

    "javascript.validate.enable": false,

    "npm.autoDetect": "off",

    "puppet.editorService.enable": false,
    "puppet.editorService.hover.showMetadataInfo": false,
    "puppet.pdk.checkVersion": false,
    "puppet.titleBar.pdkNewModule.enable": false,

    "scss.validate": false,

    "search.useGlobalIgnoreFiles": true,

    "stylelint.enable": false,

    "terminal.explorerKind": "external",

    "typescript.check.npmIsInstalled": false,
    "typescript.preferences.quoteStyle": "double",
    "typescript.tsserver.log": "normal",
    "typescript.updateImportsOnFileMove.enabled": "never",

    "scss.lint.validProperties": [
        "appearance"
    ],

    "vim.smartcase": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.history": 500,
    "vim.normalModeKeyBindingsNonRecursive": [
        // unhighlight search (hlsearch) with `\‚èé`
        {
            "before": [
                "<leader>",
                "<cr>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        // execute q macro with Q
        {
            "before": [
                "Q"
            ],
            "after": [
                "@",
                "q"
            ]
        },
        // show usages
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        // preview definition
        {
            "before": [
                "g",
                "R"
            ],
            "commands": [
                "editor.action.previewDeclaration"
            ]
        },
        // jump to definition
        {
            "before": [
                "g",
                "d"
            ],
            "commands": [
                "editor.action.goToDeclaration"
            ]
        },
        // jump to type definition
        {
            "before": [
                "g",
                "D"
            ],
            "commands": [
                "editor.action.goToTypeDefinition"
            ]
        },
        // rename
        {
            "before": [
                "g",
                "n"
            ],
            "commands": [
                "editor.action.rename"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // nicer indentation
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],

    "window.zoomLevel": 0,

    "workbench.colorTheme": "Solarized Dark",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabSizing": "shrink",

    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[scss]": {
        "editor.formatOnSave": true,
    },
    "debug.inlineValues": true,
    "debug.toolBarLocation": "docked",
    "npm.fetchOnlinePackageInfo": false,
    "markdown-preview-enhanced.codeBlockTheme": "github.css",
    "git.confirmSync": false,
    // "[markdown]": {
    //     "editor.formatOnSave": true,
    // },
}
