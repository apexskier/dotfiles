{
    "editor.fontSize": 14,
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.lineNumbers": "relative",
    "editor.fontLigatures": true,
    "editor.rulers": [80, 120],
    "editor.cursorBlinking": "solid",

    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 120,

    "vim.ignorecase": false,
    "vim.smartcase": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.history": 500,
    "vim.otherModesKeyBindingsNonRecursive": [
        // unhighlight search (hlsearch) with `\⏎`
        {
            "before": [
                "<leader>",
                "<cr>"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        },
        // execute q macro with Q
        {
            "before": [
                "Q"
            ],
            "after": [
                "@",
                "q"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                {
                    "command": "editor.action.referenceSearch.trigger",
                    "args": []
                }
            ]
        }
    ],

    "javascript.validate.enable": false,
    "eslint.autoFixOnSave": true,
    "tslint.autoFixOnSave": true,
    
    // enable "preview" (non-persistent opened files) from search, but not ⌘P
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "window.zoomLevel": 0,
    "typescript.check.npmIsInstalled": false,
    "typescript.tsserver.log": "normal",
    "emmet.showAbbreviationSuggestions": false,
    "emmet.showExpandedAbbreviation": "never",
    "npm.autoDetect": "off",
    "gulp.autoDetect": "off",
    "grunt.autoDetect": "off",
    "jake.autoDetect": "off",
    "terminal.explorerKind": "external",
    "scss.validate": false,
    "explorer.confirmDragAndDrop": false,
    "go.useLanguageServer": true,
    "flow.enabled": false,
    "workbench.editor.tabSizing": "shrink",
    "svgviewer.enableautopreview": true,
    "cSpell.showStatus": false,
    "cSpell.allowCompoundWords": true,
    "cSpell.words": [
        "anchor",
        "clabe",
        "context",
        "describedby",
        "deserialize",
        "forex",
        "gettext",
        "kount",
        "refresh",
        "reinit",
        "remitly",
        "rescroll",
        "rescroller",
        "resume",
        "scroll",
        "sendto",
        "serializable",
        "softfail",
        "softfailed",
        "transaction",
        "types",
        "unmount"
    ],
    "gitlens.gitExplorer.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.blame.heatmap.enabled": false,
    "gitlens.blame.avatars": false,
    "gitlens.blame.highlight.enabled": false,
    "gitlens.hovers.annotations.over": "annotation",
    "gitlens.hovers.annotations.enabled": false,
    "gitlens.recentChanges.highlight.locations": [
        "gutter",
        "overview",
        "line"
    ],
    "gitlens.statusBar.enabled": false,
    "gitlens.currentLine.format": "${ago}",
    "cSpell.userWords": [
        "csrf",
        "decamelize",
        "deduping",
        "deployer",
        "deregister",
        "deserialization",
        "deserialize",
        "deserialized",
        "deserializer",
        "directionality",
        "forex",
        "ifsc",
        "locme",
        "mailto",
        "nolink",
        "react",
        "recurse",
        "remitly",
        "sassify",
        "serializable",
        "serializers",
        "signup",
        "stateful",
        "symlinks",
        "transpilation",
        "truthy",
        "unauthed",
        "uncancelable",
        "unhydrated",
        "unmounts",
        "verdaccio"
    ],
    "gitlens.keymap": "chorded",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "flow.runOnEdit": false,
    "workbench.editor.labelFormat": "short",
    "cSpell.language": "en,en-US",
    "gitlens.historyExplorer.enabled": true,
    "stylelint.enable": false
}
